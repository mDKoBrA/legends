    android:pivotY="50%"
    android:toDegrees="270">

    <shape android:useLevel="false"
        android:shape="ring">

        <gradient android:endColor="#8ce7fa"
            android:centerColor="#9675c0"
            android:startColor="#8ce7fa"
            android:type="sweep"
            android:useLevel="false"/>

    </shape>

</rotate>