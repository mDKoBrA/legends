<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="362dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="369dp"
        app:cardBackgroundColor="@color/colorDarkGrey"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Spinner
            android:id="@+id/spCategories"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <Spinner
            android:id="@+id/spCategories1"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <Spinner
            android:id="@+id/spCategories2"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />


        <Button
            android:id="@+id/btnDate"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="50dp"
            android:padding="10dp"
            android:text="@string/btn_date"
            android:textColor="@drawable/button_text_color"
            android:background="@drawable/btn_report_incident_activity"
            android:drawableStart="@drawable/ic_calendar"
            android:drawableTint="@drawable/button_text_color"
            android:paddingStart="30dp"
            android:paddingEnd="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/send"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="370dp"
            android:layout_marginLeft="50dp"
            android:text="@string/btn_send"
            android:textColor="@drawable/button_text_color"
            android:background="@drawable/btn_report_incident_activity"
            android:drawableStart="@drawable/ic_send"
            android:drawableTint="@drawable/button_text_color"
            android:paddingStart="14dp"
            android:paddingEnd="33dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDate"/>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>